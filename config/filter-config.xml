			<filter-ref name="filter3" />
		</filter-list>
	</filter-root>


	<controller-root>
		<controller-list identifier="pc">
			<controller name="applController" class="com.wzf.chain.ApplController">
				<action name="t_name1" method="test">
					<filter-ref name="filter_list_1" />
				</action>
				<action name="t_name2" method="test2">
					<filter-ref name="filter_list_2" />
				</action>
			</controller>
		</controller-list>
	</controller-root>
