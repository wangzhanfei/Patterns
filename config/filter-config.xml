<configs>

	<filter-root>

		<filter name="filter1" class="com.wzf.filter.TestActionFilter" />
		<filter name="filter2" class="com.wzf.filter.Filter2" />
		<filter name="filter3" class="com.wzf.filter.Filter3" />

		<filter-list name="filter_list_1">
			<filter-ref name="filter1" />
			<filter-ref name="filter2" />
		</filter-list>

		<filter-list name="filter_list_2">
			<filter-ref name="filter1" />
			<filter-ref name="filter2" />
			<filter-ref name="filter3" />
		</filter-list>

		<filter-list name="filter_list_3">
			<filter-ref name="filter_list_2" />
